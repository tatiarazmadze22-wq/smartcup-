<script>
const btn = document.querySelector('.btn');
btn.addEventListener('click', () => {
  alert('გმადლობთ, რომ გაინტერესებთ Smart Cup-ის ფუნქციები!');
});

const heroImg = document.querySelector('.hero-img img');
heroImg.addEventListener('mouseenter', () => {
  heroImg.src = 'https://via.placeholder.com/300x400/ffccbc?text=Hot+Smart+Cup';
});
heroImg.addEventListener('mouseleave', () => {
  heroImg.src = 'https://via.placeholder.com/300x400?text=Smart+Cup';
});

const form = document.querySelector('form');
form.addEventListener('submit', (e) => {
  e.preventDefault();
  alert('თქვენი მესიჯი გაგზავნილია! მალე დაგიკავშირდებით.');
  form.reset();
});
</script>

